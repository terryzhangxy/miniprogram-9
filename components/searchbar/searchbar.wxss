
.search-bar {
    display: flex;
    position: relative;
    padding: 8px;
    background-color:whitesmoke;
    box-sizing: border-box;
    align-items: center;
    flex-wrap: wrap;
}

.search-bar__box {
    display: flex;
    display: inline-block;
    position: relative;
    background-color:white;
    border-radius:5px;
    align-items: center;
    flex-grow: 1;
    justify-content: center;
}

.search-bar__input {
    display: inline-block;
    flex-grow: 1;
    position: relative;
    height: 36px;
    background-color: aqua;
    z-index: 2;
    font-size: 14px;
}

.search-bar__seaerch {
    display: inline-block;
}
