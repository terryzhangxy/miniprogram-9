
.search-bar {
    display: flex;
    position: relative;
    padding: 8px;
    background-color:whitesmoke;
    box-sizing: border-box;
    align-items: center;
    flex-wrap: wrap;
}

.search-bar__box {
    display: flex;
    position: relative;
    background-color:white;
    border-radius:5px;
    align-items: center;
    flex-grow: 1;
}

.search-bar__input {
    flex-grow: 1;
    position: relative;
    height: 36px;
    background: transparent;
    z-index: 2;
    font-size: 14px;
}

.weui-icon-clear {
    margin-left: 8px;
    margin-right: 8px;
}

.weui-icon-search {
    margin-left: 10px;
    margin-right: 8px;
}